@page
@model LoanForEdu.LoanModel
@{


}
<div class="col mx-3 shadow-sm mt-5" style="background-color: #FFFFFF; border-radius: 5px; min-width:300px;">
    <div class="p-3" style="text-align: left;">
        <a type="button" class="btn" href="/Home" style="display: block; background-color:#E4E6E9; color:#000000;">
            กลับไปหน้าแรก
        </a>
    </div>
</div>
<div class="col mx-3 shadow-sm mt-3" style="background-color: #FFFFFF; border-radius: 5px; min-width:300px;">
    <div class="pt-4">
        <div class="mx-3 pt-3 pb-2" style="text-align: center; color:#1877f2; background-color: #FAFAFA; border-radius: 5px;">
        <h4>ยื่นกู้เงินกู้เพื่อการศึกษาของตนเอง</h4>
    </div>
    </div>
    <div class="p-3 pt-2" style="text-align: left;">
        <form method="post">
            <div class="mb-3">
                <label class="mb-1" for="salary">เงินเดือน</label>
                <input asp-for="salary" id="salary" class="form-control" />
                @* class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" *@
            </div>
            <div class="mb-3">
                <label class="mb-1" for="net_salary">เงินเดือนคงเหลือสุทธิ</label>
                <input asp-for="net_salary" id="net_salary" class="form-control"/>
            </div>
            <div class="mb-3">
                <label class="mb-1" for="amount">ยอดเงินที่ต้องการกู้</label>
                <input asp-for="amount" id="amount" class="form-control"/>
            </div>
            <div class="form-group mb-3">
                <label class="mb-1" for="periods">กำหนดระยะเวลาของสัญญา</label>
                <select class="form-control" id="periods" asp-for="periods">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                    <option>11</option>
                    <option>12</option>
                </select>
            </div>
            <div class="mb-3">
                <h6>วงเงินที่ได้รับการอนุมัติก็ต่อเมื่อยอดเงินที่ต้องการกู้ไม่เกิน เงินเดือนคงเหลือสุทธิ * ระยะเวลาของสัญญา เท่านั้น</h6>
            </div>
            <button class="btn btn-primary" style="display: block; background-color:#1877f2; color:#FFFFFF;"
                type="submit">ส่งขอคำยื่นกู้</button>
        </form>
    </div>
</div>